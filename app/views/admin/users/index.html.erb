<%= form_tag("/index", method: "get") do %>
  <%= label_tag(:q, "Search for:") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search") %>
<% end %>

<h1>User Details</h1>

<table  class = 'table table-striped'>
  <thead>
    <tr>
      <th>User name</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Email </th>
      <th>status</th>
      <th>actions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.user_name %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <%if user.status == true%>
        <td><%= link_to 'Active', admin_users_update_status_path(user) %></td>
        <%else%>
        <td><%= link_to 'In active', admin_users_update_status_path(user) %></td>
        <%end%>
        <td><%= link_to 'Edit', admin_users_edit_path(user) %>
        <%= link_to 'show order', admin_users_show_order_path(user) %>
        <%= link_to 'Destroy', admin_users_delete_path(user) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>





